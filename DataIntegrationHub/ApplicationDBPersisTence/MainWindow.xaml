            <Button Content="Test" HorizontalAlignment="Left" Margin="302,70,0,0" VerticalAlignment="Top" Width="48" Height="20"/>
            <TextBox Name="addressTb" HorizontalAlignment="Left" Height="22" Margin="64,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Address" />
