            <TextBox HorizontalAlignment="Left" Height="22" Margin="116,68,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="90" ToolTip="" />
            <Label Content="Address:" HorizontalAlignment="Left" Margin="12,126,0,0" VerticalAlignment="Top" Height="28" Width="54"/>
            <Label Content="Port:" HorizontalAlignment="Left" Margin="188,126,0,0" VerticalAlignment="Top" Height="28" Width="34"/>
            <CheckBox Content="Minimize to tray" HorizontalAlignment="Left" Margin="147,339,0,0" VerticalAlignment="Top" Height="16" Width="132" IsChecked="True"/>
            <ListBox Name="logLb" HorizontalAlignment="Left" Height="72" Margin="10,262,0,0" VerticalAlignment="Top" Width="412"/>
        </Grid>
    </Grid>
</Window>
