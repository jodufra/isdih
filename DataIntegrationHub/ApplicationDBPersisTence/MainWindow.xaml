            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="260,95,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.ColumnSpan="2"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="260,151,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Height="20"/>
        <Button Content="Test" HorizontalAlignment="Left" Margin="34,95,0,0" VerticalAlignment="Top" Width="47" Grid.Column="1" Height="20"/>
        <Button Content="Test" HorizontalAlignment="Left" Margin="34,151,0,0" VerticalAlignment="Top" Width="47" Grid.Column="1" Height="20"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="53,151,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="120" ToolTip=""/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="178,151,0,0" TextWrapping="Wrap" Text="Port" VerticalAlignment="Top" Width="53" ToolTip=""/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="53,62,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" Width="93" ToolTip=""/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,62,0,0" TextWrapping="Wrap" Text="DBname" VerticalAlignment="Top" Width="90" ToolTip=""/>
        <Button Content="Clear Log" Grid.Column="1" HorizontalAlignment="Left" Margin="108,257,0,0" VerticalAlignment="Top" Width="75" Height="20"/>
        <CheckBox Content="Start On App StartUp" HorizontalAlignment="Left" Margin="12,355,0,0" VerticalAlignment="Top" Height="15" Width="132"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="53,92,0,0" TextWrapping="Wrap" Text="User Id" VerticalAlignment="Top" Width="93" ToolTip=""/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,92,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="90" ToolTip=""/>

    </Grid>
</Window>
